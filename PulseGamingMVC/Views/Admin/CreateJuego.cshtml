@model PulseGamingMVC.Models.Juego

@{
    ViewData["Title"] = "CreateJuego";
}

<h1>Crear Juego</h1>

<p>
    <a asp-action="JuegosGeneros" class="btn btn-dark"><i class="bi bi-arrow-90deg-left"></i></a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateJuego">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreJuego" class="control-label"></label>
                <input asp-for="NombreJuego" class="form-control" />
                <span asp-validation-for="NombreJuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGenero" class="control-label"></label>
                <input asp-for="IdGenero" class="form-control" />
                <span asp-validation-for="IdGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenJuego" class="control-label"></label>
                <input asp-for="ImagenJuego" class="form-control" />
                <span asp-validation-for="ImagenJuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioJuego" class="control-label"></label>
                <input asp-for="PrecioJuego" class="form-control" />
                <span asp-validation-for="PrecioJuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h2>@TempData["MENSAJE"]</h2>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
