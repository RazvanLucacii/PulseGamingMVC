@model IEnumerable<PulseGamingMVC.Models.Usuario>

@{
    ViewData["Title"] = "UsuariosView";
}

<h1>Vista Usuarios</h1>

<p>
    <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-dark">
        <i class="bi bi-arrow-90deg-left"></i>
    </a>
    <a asp-action="CreateUsuario" class="btn btn-dark">Nuevo Usuario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                    @Html.ActionLink("Editar", "ModificarUsuario", new { idUsuario = item.IdUsuario }, new { @class = "btn btn-dark" }) |
                    @Html.ActionLink("Delete", "DeleteUsuario", new { idUsuario = item.IdUsuario }, new { @class = "btn btn-dark" })
            </td>
        </tr>
}
    </tbody>
</table>
