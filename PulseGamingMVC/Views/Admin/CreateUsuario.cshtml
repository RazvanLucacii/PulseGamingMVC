@model PulseGamingMVC.Models.Usuario

@{
    ViewData["Title"] = "CreateUsuario";
}

<h1>Crear Usuario</h1>
<p>
    <a asp-action="UsuariosView" class="btn btn-dark"><i class="bi bi-arrow-90deg-left"></i></a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUsuario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input type="text" name="nombre" placeholder="Nombre" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" name="email" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" name="password" placeholder="Password" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input type="text" name="telefono" placeholder="Telefono" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="IDRole" class="control-label"></label>
                <input type="text" name="IDRole" placeholder="idrole" class="form-control">
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<h2>@ViewData["MENSAJE"]</h2>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
