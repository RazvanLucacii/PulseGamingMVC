@{
    string? user = Context.Session.GetString("USUARIO");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PulseGamingMVC</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/icons/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">
    <link rel="stylesheet" href="~/css/Inicio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Games.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Registro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PulseGamingMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Juegos" asp-action="Inicio">Pulse Gaming</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link botonesCustom" asp-area="" asp-controller="Juegos" asp-action="Inicio">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link botonesCustom" asp-area="" asp-controller="Juegos" asp-action="Games">Juegos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link botonesCustom" asp-area="" asp-controller="Juegos" asp-action="Carrito">Carrito</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav float-end">
                        <li class="nav-item dropdown">
                            <button type="button" class="botonesCustom" class="dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                            </button>
                            <ul class="dropdown-menu">
                                @if (user is not null)
                                {
                                    int userRole = (int)Context.Session.GetInt32("UserRole");
                                    if (userRole == 1) // Si el rol del usuario es administrador
                                    {
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-action="Pedidos" asp-controller="Juegos">Mis Pedidos</a></li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" asp-action="Perfil" asp-controller="Usuarios">Perfil de Usuario</a></li>
                                        <li><a class="dropdown-item" asp-action="Pedidos" asp-controller="Juegos">Mis Pedidos</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Usuarios">Log Out</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="Login">Log-In</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="RegistrarUsuario">Register</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main class="">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - PulseGamingMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
