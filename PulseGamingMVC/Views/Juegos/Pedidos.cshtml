<h2>Pedido Actual</h2>

@if (Model != null)
{
    <div class="text-center">

    </div>
    <p>Fecha del pedido: @Model.FechaPedido</p>
    <p>Ciudad: @Model.Ciudad</p>
    <p>País: @Model.Pais</p>
    <p>Total: @Model.Total €</p>

    <h3>Productos:</h3>
    <ul>
        @foreach (var detalle in Model.TotalProducto.Split(','))
        {
            <li>@detalle</li>
        }
    </ul>
}
else
{
    <h3>No hay ningún pedido pendiente.</h3>
}