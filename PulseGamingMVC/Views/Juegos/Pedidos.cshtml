
@if (Model != null)
{
    <div class="text-center">
        <h2>Pedido Actual</h2>
        <div class="card shadow-sm m-auto">
            <div class="card-body">
                <p class="card-text">Fecha: @Model.FechaPedido</p>
                <p class="card-text">Ciudad: @Model.Ciudad</p>
                <p class="card-text">Pais: @Model.Pais</p>
                <p class="card-text">Total: @Model.Total €</p>
                <h3>Productos:</h3>
                <ul>
                    @foreach (var detalle in Model.TotalProducto.Split(','))
                    {
                        <li>@detalle</li>
                    }
                </ul>
            </div>
        </div>
    </div>
}
else
{
    <h3>No hay ningún pedido pendiente.</h3>
}